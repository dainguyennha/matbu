<%= render 'layouts/header' %>
<div class="ThongtinDonHang">

	<div class="container">

		<div class="row">

    <%= form_for :search,  url: sys_orders_path(), method: 'get', remote: true do |f|%>
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">

			<p class="title_danhsach">Danh sách</p>
      <div class="tool-wrapper">
      <div class="search-table">
          <div class="search-products-wrapper">
          <%= f.text_field :id, placeholder: "Nhập vào id đơn hàng...", class: "form-control" %>
          <%= f.submit "Tìm kiếm", class: "btn btn-success", id:"find_and_order_btn" %>
          </div>

      </div>
      <div></div>
      <div></div>
      <div><%= f.check_box :show_all, onchange: "orderChange();" %><%= f.label "Hiển thị toàn bộ đơn hàng", for:"search_show_all" %></div>
      </div>


			<table class="table_danhsach table_danhsach_f">

				<tr>

					<th>Thời gian mua hàng</th>

					<th>Mã đơn hàng</th>

					<th>Tổng cộng</th>
          <th>Số điện thoại</th>

          <th class="cur-poiter"><%= f.check_box :status, onchange: "orderChange();", class: "dp-none" %> <%= f.label "Tình trạng đơn hàng", for: "search_status" %></th>



					<th>Chi tiết</th>

				</tr>

        <%= render 'order_list', orders: @orders %>
        

			</table>
      <div id="pagination">
      <%= paginate @orders, remote: true %>
      </div>

		</div>
  <%end%>

	</div>

</div>

</div>
<%= render 'layouts/footer' %>
