<div class="row row_item" id="cp-page_<%= card_product.id %>">

	<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 ">

		<div class="div_bg"><%= image_tag card_product.product.images[0] %></div>

	</div>

	<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 ">

    <p class="name"><b><%= card_product.product.name %></b></p>

		<div class="row">

			<div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 ">


        <p class="info">Size: <%= card_product.size %></p>
        <p class="info">Kho: <%= card_product.product.get_stock card_product.size %></p>

			</div>

			<div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 ">

				<div class="row row_count">

					<div class="col-lg-4 col-md-4 col-sm-6 col-xs-3 ">

            
						<div class="gr_input_number">
              <label>Số lượng</label>
              <input type="number" name="" id="input-count-product-page_<%= card_product.id %>" data-price=<%= card_product.product.price %> data-card-product=<%= card_product.id %> value=<%= card_product.count %> onclick="calTotal(this);" class="input-count-product-page">


						</div>

					</div>

					<div class="col-lg-4 col-md-5 col-sm-4 col-xs-5 text-center">

            <b class="price"><%= card_product.product.price %> đ</b>

					</div>

					<div class="col-lg-4 col-md-3 col-sm-2 col-xs-3 ">

						<span class="delete" onclick="delCardProduct(<%= card_product.id %>);">Xoá</span>

					</div>

				</div>

			</div>

		</div>

	</div>

</div>
