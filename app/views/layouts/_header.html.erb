<div class="HeaderPage">

    <!--Header-->
    <div class="Header_hotline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="left">
                        <ul class="contact">
                            <li>
                                <span class="icon_email"></span>
                                <span class="text_email">Email: matbu@gmail.com</span>
                            </li>
                            <li>
                                <span class="icon_hotline"></span>
                                <span class="text_hotline">028 6656 3365</span>
                            </li>
                        </ul>
                    </div>
                    <div class="right">
                        <ul class="account">
                            <li class="">
                                <% if logged_in? %>
                                    <%= link_to user_path(current_user) do %>
                                        <span class="icon_account"></span>
                                        <% end %>
                                            <%= link_to "Đăng xuất", auth_session_path(current_user), method: 'delete', class: "text_account"  %>
                                                <% else %>
                                                    <%= link_to "Đăng ký",new_auth_signup_path(), class:"text_account", remote: true
                %>

                                                        <span class="text_account">|</span>
                                                        <%= link_to "Đăng nhập",new_auth_session_path(), class:"text_account", remote: true
                %>

                                                            <% end %>
                            </li>
                            <li class="accountlogin ico_avatar hidden">
                                <span class="text">Yuna</span>
                                <span>
									</span>
                                <span class="icon_down"></span>
                                <div class="div_login_signup">
                                    <span class="name">Yuna</span>
                                    <hr/>
                                    <!--Đã login-->
                                    <ul>
                                        <li class=""><a href="#">Thông tin tài khoản</a></li>
                                        <li class=""><a href="#">Giỏ hàng</a></li>
                                        <li class=""><a href="#">Lịch sử mua hàng</a></li>
                                        <li class=""><a href="#">Thoát</a></li>
                                    </ul>
                                    <!--Đã login end-->
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="HeaderContent ">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                    <%= link_to image_tag("logo.svg", alt: "logo"), "/", class:"logo" %>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">

                    <div class="group_link_header ">

                        <div class="div_search hidden-xs-down">
                            <%= form_for :search, url: search_products_path(), method: 'get' do |f| %>
                                <%= f.text_field :name,  placeholder:"Tìm kiếm" %>
                                    <span class="icon_search"></span>
                                    <%end%>
                        </div>
                        <div class="div_cart div_tracuu">
                            <p class="cart">
                                <span class="ico_tracuu"></span>
                                <span class="text"><%= link_to "Theo dõi đơn hàng", orders_path() %></span>
                            </p>
                        </div>
                        <div class="div_cart">
                            <p class="cart btn_popup_cart">
                                <span class="ico_cart"><span class="_number"></span></span>
                                <%= link_to "Giỏ hàng", card_products_path(), class:"text", remote: true %>
                            </p>
                            <div class="cgrd-wrapper">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Navigation-->
    <div class="HeaderNav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span> 
                    <span class="icon-bar"></span>
                  </button>
            </div>
            <!--Navigation-->
            <div class="div_search_pos Shows-xs">
                <div class="div_search">
                    <span class="ico_search show_search"></span>
                    <span class="search_text">Tìm kiếm</span>
                    <span class="div_input_search">
							<input class="input" placeholder="Tìm kiếm">
							<span class="btn btn-primary ico_search act btn_search"></span>
                    <span class="close_search">

							</span>

                    </span>
                </div>
            </div>
        </div>
    </div>
    <!--Navigation End-->
    <div class="HeaderContent headermenu">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-0 col-sm-0 col-xs-0">

                </div>
                <div class="col-lg-10 col-md-12 col-sm-12">
                    <div class="collapse navbar-collapse" id="navbar">
                        <ul class="nav navbar-nav">
                            <li class="cate ">
                                <a href="#">
									<span class="text_cate">Phân loại</span>
								</a>
                                <div class="cate_child">
                                  <% Category.all.each do |category| %>
                                  <div class="link-wrap"><%= link_to category.name, category_products_path(id: category.id) %></div>
                                <%end%>

                                    
                                 </div>
                            </li>
                            <% if logged_in? %>
                            <% if current_user.admin %>
                            <li class="cate ">
                                <a href="#">
									<span class="text_cate">Công cụ dành cho admin</span>
								</a>
                                <div class="cate_child">
                                  <div class="link-wrap"><%= link_to "Doanh số bán hàng", sys_sales_statistics_path() %></div>
                                  <div class="link-wrap"><%= link_to "Xử lý đơn hàng", sys_orders_path() %></div>
                                  


                                 </div>
                            </li>
                          <%end%>
                        <%end%>
                            
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Header End-->
</div>
